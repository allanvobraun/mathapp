<Tela@GridLayout>:
    cols: 1
    display: display
    info: info
    orientation: 'vertical'

    canvas:
        Color:
            rgba: utils.get_color_from_hex('#41704d')
        Rectangle:
            size:self.size
            pos:self.pos


    Label:
        id: info
        text: 'Equação'
        font_name: 'assets/fonts/times new.ttf'
        font_size: 24


    Label:
        id: display
        text: ''
        font_name: 'assets/fonts/times new.ttf'
        font_size: 54
        height: 5
