#:import Tela app.classes.tela

<Tela>:
    cols: 1
    display: display
    information: information
    orientation: 'vertical'

    canvas:
        Color:
            rgba: utils.get_color_from_hex('#41704d')
        Rectangle:
            size:self.size
            pos:self.pos


    Label:

        id: information
        size_hint: (1, 0.3)
        text: 'Equação'
        font_name: 'assets/fonts/times new.ttf'
        font_size: 24


    Label:
        id: display
        text: ''
        font_name: 'assets/fonts/times new.ttf'
        font_size: 54
        height: 5
