#:import Keyboard app.classes.keyboard
#:import Tela app.classes.tela

<Keyboard>:

    KbButton:
        text:'1'
        color: root.get_cor()
        on_press: root.write(self.text)

    KbButton:
        text:'2'
        color: root.get_cor()
        on_press: root.write(self.text)
        

    KbButton:
        text:'3'
        color: root.get_cor()
        on_press: root.write(self.text)


    Button:
        font_name: 'assets/fonts/times italic.ttf'
        font_size: 54
        background_normal: ''
        background_color: 255,255,255,1
        text: u'x / x\u00b2'
        on_press: root.incognita()
        color: root.get_cor()


    KbButton:
        text:'4'
        color: root.get_cor()
        on_press: root.write(self.text)
        

    KbButton:
        text:'5'
        color: root.get_cor()
        on_press: root.write(self.text)
        

    KbButton:
        text:'6'
        color: root.get_cor()
        on_press: root.write(self.text)
        

    Button:
        on_press: root.delete()
        color: root.get_cor()

        background_normal: ''
        background_color: 255,255,255,1

        Image:
            source: 'assets/images/backspace_new.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y


    KbButton:
        text:'7'
        color: root.get_cor()
        on_press: root.write(self.text)
        

    KbButton:
        text:'8'
        color: root.get_cor()
        on_press: root.write(self.text)

    KbButton:
        text:'9'
        color: root.get_cor()
        on_press: root.write(self.text)


    Button:
        text:'C'
        font_name: 'assets/fonts/times new.ttf'
        font_size: 54
        background_normal: ''
        background_color: 255,255,255,1
        on_press: root.clean()
        color: root.get_cor()

    KbButton:
        text:','
        on_press: root.virgula()
        color: root.get_cor()

    KbButton:
        text:'0'
        on_press: root.write('0')
        color: root.get_cor()

    Button:
        font_name: 'assets/fonts/times new.ttf'
        text: u' + / \u2012'
        font_size: 54
        background_normal: ''
        background_color: 255,255,255,1
        on_press: root.plus_minus()
        color: root.get_cor()

    KbButton:
        text:'='
        on_press: root.validate()
        color: root.get_cor()

<KbButton@Button>:
    font_name: 'assets/fonts/CENTURY.ttf'
    font_size: 54
    background_normal: ''
    background_color: 255,255,255,1







